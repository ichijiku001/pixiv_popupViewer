{
  "name": "pixiv ポップアップビューアー",
  "version": "1.2",
  "manifest_version": 3,
  "description": "pixivのイラスト・マンガ・小説を、ページ移動せずにポップアップで表示する拡張機能です。",
  "icons" : {
    "16" : "icon/icon16.png",
    "32" : "icon/icon32.png",
    "48" : "icon/icon48.png",
    "128" : "icon/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["js/script.js"],
      "css": ["css/script.css"],
      "matches": ["https://www.pixiv.net/*"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset",
      "enabled": false,
      "path": "json/rules.json"
    }]
  },
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://www.pixiv.net/*"
  ],
  "options_ui": {
    "page": "html/options.html"
  }
}
